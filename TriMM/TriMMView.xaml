<Window x:Class="TriMM.TriMMView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TriMM View" Height="630" Width="770" ShowInTaskbar="True" SizeToContent="Width" MinHeight="630" MinWidth="770" Top="0" WindowStyle="ThreeDBorderWindow" Left="0" Background="GhostWhite">
    <Grid>
        <ScrollBar Height="Auto" HorizontalAlignment="Left" Name="yScrollBar" Width="18" Margin="0,0,0,18" Maximum="10000" Minimum="-10000" Scroll="YScrollBar_Scroll" />
        <ScrollBar Height="18" Margin="18,0,156,0" Name="xScrollBar" VerticalAlignment="Bottom" Width="Auto" Orientation="Horizontal" Minimum="-10000" Maximum="10000" Scroll="XScrollBar_Scroll" />
        <Button Height="18" HorizontalAlignment="Left" Name="centerButton" VerticalAlignment="Bottom" Width="18" Background="Red" BorderThickness="5" Click="CenterButton_Click"></Button>
        <WindowsFormsHost Margin="18,0,156,18" Name="controlWFHost" />
        <CheckBox HorizontalAlignment="Right" Margin="0,12.221,29.997,0" Name="smoothCheckBox" Width="120" Height="16" VerticalAlignment="Top" Checked="SmoothCheckBox_CheckedChanged" Unchecked="SmoothCheckBox_CheckedChanged">Smooth</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,34.441,29.997,0" Name="solidCheckBox" VerticalAlignment="Top" Width="120" Checked="SolidCheckBox_CheckedChanged" Unchecked="SolidCheckBox_CheckedChanged">Solid</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,56.661,29.997,0" Name="meshCheckBox" VerticalAlignment="Top" Width="120" Checked="MeshCheckBox_CheckedChanged" Unchecked="MeshCheckBox_CheckedChanged">Mesh</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,78.881,31.108,0" Name="verticesCheckBox" VerticalAlignment="Top" Width="119" Checked="VerticesCheckBox_CheckedChanged" Unchecked="VerticesCheckBox_CheckedChanged">Vertices</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,101.101,29.997,0" Name="triangleNormalsCheckBox" VerticalAlignment="Top" Width="120" Checked="TriangleNormalsCheckBox_CheckedChanged" Unchecked="TriangleNormalsCheckBox_CheckedChanged">Triangle Normals</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,123.321,29.997,0" Name="vertexNormalsCheckBox" VerticalAlignment="Top" Width="120" Checked="VertexNormalsCheckBox_CheckedChanged" Unchecked="VertexNormalsCheckBox_CheckedChanged">Vertex Normals</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,144.43,29.997,0" Name="xAxisCheckBox" VerticalAlignment="Top" Width="120" Checked="XAxisCheckBox_CheckedChanged" Unchecked="XAxisCheckBox_CheckedChanged">X-Axis</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,166.65,29.997,0" Name="yAxisCheckBox" VerticalAlignment="Top" Width="120" Checked="YAxisCheckBox_CheckedChanged" Unchecked="YAxisCheckBox_CheckedChanged">Y-Axis</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,188.87,29.997,0" Name="zAxisCheckBox" VerticalAlignment="Top" Width="120" Checked="ZAxisCheckBox_CheckedChanged" Unchecked="ZAxisCheckBox_CheckedChanged">Z-Axis</CheckBox>
        <Label HorizontalAlignment="Right" Margin="0,211.09,29.997,0" Name="clippingPlaneLabel" Width="120" Height="28" VerticalAlignment="Top">Clipping Plane:</Label>
        <WindowsFormsHost Height="28" HorizontalAlignment="Right" Margin="0,236.643,24.221,0" Name="clippingPlaneWFHost" VerticalAlignment="Top" Width="113.998" />
        <GroupBox Header="Picking" HorizontalAlignment="Right" Margin="0,269.973,12.221,0" Name="pickingGroupBox" Width="137.998" Height="218.71" VerticalAlignment="Top">
            <Grid>
                <ComboBox Height="23" Margin="6,6,6,0" Name="pickingModeComboBox" VerticalAlignment="Top" SelectedIndex="0">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Vertices</ComboBoxItem>
                    <ComboBoxItem>Edges</ComboBoxItem>
                    <ComboBoxItem>Triangles</ComboBoxItem>
                </ComboBox>
                <WindowsFormsHost Margin="6,69.993,6,0" Name="observedWFHost" Height="26.117" VerticalAlignment="Top" />
                <Label Height="28" Margin="6,35.552,-0.445,0" Name="observedLabel" VerticalAlignment="Top" HorizontalContentAlignment="Center">Observed</Label>
                <Button Margin="6,102.212,6,0" Name="clearObservedButton" Height="23.895" VerticalAlignment="Top" Click="ClearObservedButton_Click">Clear</Button>
                <WindowsFormsHost Height="28
                                  " Margin="6,165.539,6,0" Name="radiusWFHost" VerticalAlignment="Top" />
                <Label Height="28" Margin="6,131.437,6,0" Name="radiusLabel" VerticalAlignment="Top" HorizontalContentAlignment="Center">Radius</Label>
            </Grid>
        </GroupBox>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,41.107" Name="screenshotButton" VerticalAlignment="Bottom" Width="138.873" Click="ScreenshotButton_Click">Screenshot</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,12.221" Name="resetViewButton" VerticalAlignment="Bottom" Width="138.664" Click="ResetViewButton_Click">Reset View</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,495,12.221,0" Name="settingsButton" VerticalAlignment="Top" Width="137.985" Click="SettingsButton_Click">Settings</Button>
    </Grid>
</Window>
