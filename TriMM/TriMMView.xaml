    <Window x:Uid="TriMMView" x:Class="TriMM.TriMMView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Source={StaticResource Lang}, XPath=TriMMView/Title/@Text}" Height="630" Width="770" ShowInTaskbar="True" SizeToContent="Width" MinHeight="630" MinWidth="770" Top="0" WindowStyle="ThreeDBorderWindow" Left="0" Uid="TriMMView">
    <Grid x:Uid="Grid_1">
        <ScrollBar x:Uid="yScrollBar" Height="Auto" HorizontalAlignment="Left" Name="yScrollBar" Width="18" Margin="0,0,0,18" Maximum="10000" Minimum="-10000" Scroll="YScrollBar_Scroll" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/YScrollBarToolTip/@Text}"/>
        <ScrollBar x:Uid="xScrollBar" Height="18" Margin="18,0,156,0" Name="xScrollBar" VerticalAlignment="Bottom" Width="Auto" Orientation="Horizontal" Minimum="-10000" Maximum="10000" Scroll="XScrollBar_Scroll" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/XScrollBarToolTip/@Text}"/>
        <Button x:Uid="centerButton" Height="18" HorizontalAlignment="Left" Name="centerButton" VerticalAlignment="Bottom" Width="18" Background="Red" BorderThickness="0" Click="CenterButton_Click" VerticalContentAlignment="Center" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/CenterButtonToolTip/@Text}"></Button>
        <WindowsFormsHost x:Uid="controlWFHost" Margin="18,0,156,18" Name="controlWFHost" />
        <CheckBox x:Uid="smoothCheckBox" HorizontalAlignment="Right" Margin="0,12.221,0,0" Name="smoothCheckBox" Width="149.997" Height="Auto" VerticalAlignment="Top" Checked="SmoothCheckBox_CheckedChanged" Unchecked="SmoothCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/SmoothCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/SmoothCheckBox/@Text}"/>
        <CheckBox x:Uid="solidCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,34.441,0,0" Name="solidCheckBox" VerticalAlignment="Top" Width="149.997" Checked="SolidCheckBox_CheckedChanged" Unchecked="SolidCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/SolidCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/SolidCheckBox/@Text}"/>
        <CheckBox x:Uid="meshCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,56.661,0,0" Name="meshCheckBox" VerticalAlignment="Top" Width="149.997" Checked="MeshCheckBox_CheckedChanged" Unchecked="MeshCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/MeshCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/MeshCheckBox/@Text}"/>
        <CheckBox x:Uid="verticesCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,78.881,0,0" Name="verticesCheckBox" VerticalAlignment="Top" Width="150.108" Checked="VerticesCheckBox_CheckedChanged" Unchecked="VerticesCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/VerticesCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/VerticesCheckBox/@Text}"/>
        <CheckBox x:Uid="triangleNormalsCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,101.101,0,0" Name="triangleNormalsCheckBox" VerticalAlignment="Top" Width="149.997" Checked="TriangleNormalsCheckBox_CheckedChanged" Unchecked="TriangleNormalsCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/TriangleNormalsCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/TriangleNormalsCheckBox/@Text}"/>
        <CheckBox x:Uid="vertexNormalsCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,123.321,0,0" Name="vertexNormalsCheckBox" VerticalAlignment="Top" Width="149.997" Checked="VertexNormalsCheckBox_CheckedChanged" Unchecked="VertexNormalsCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/VertexNormalsCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/VertexNormalsCheckBox/@Text}"/>
        <CheckBox x:Uid="xAxisCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,144.43,0,0" Name="xAxisCheckBox" VerticalAlignment="Top" Width="149.997" Checked="XAxisCheckBox_CheckedChanged" Unchecked="XAxisCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/XAxisCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/XAxisCheckBox/@Text}"/>
        <CheckBox x:Uid="yAxisCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,166.65,0,0" Name="yAxisCheckBox" VerticalAlignment="Top" Width="149.997" Checked="YAxisCheckBox_CheckedChanged" Unchecked="YAxisCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/YAxisCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/YAxisCheckBox/@Text}"/>
        <CheckBox x:Uid="zAxisCheckBox" Height="Auto" HorizontalAlignment="Right" Margin="0,188.87,0,0" Name="zAxisCheckBox" VerticalAlignment="Top" Width="149.997" Checked="ZAxisCheckBox_CheckedChanged" Unchecked="ZAxisCheckBox_CheckedChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/XAxisCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/ZAxisCheckBox/@Text}"/>
        <Label x:Uid="clippingPlaneLabel" HorizontalAlignment="Right" Margin="0,211.09,0,0" Name="clippingPlaneLabel" Width="149.997" Height="Auto" VerticalAlignment="Top" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/ClippingPlaneToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/ClippingPlaneLabel/@Text}"/>
        <WindowsFormsHost x:Uid="clippingPlaneWFHost" Height="28" HorizontalAlignment="Right" Margin="0,236,12,0" Name="clippingPlaneWFHost" VerticalAlignment="Top" Width="126.219"/>
        <GroupBox x:Uid="pickingGroupBox" Header="{Binding Source={StaticResource Lang}, XPath=TriMMView/PickingGroupBoxHeader/@Text}" HorizontalAlignment="Right" Margin="0,269.973,0,103.317" Name="pickingGroupBox" Width="150.219">
            <Grid x:Uid="Grid_2">
                <ComboBox x:Uid="pickingModeComboBox" Height="23" Margin="6,6,6,0" Name="pickingModeComboBox" VerticalAlignment="Top" SelectedIndex="0" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/PickingModeComboBoxToolTip/@Text}">
                    <ComboBoxItem x:Uid="NoneItem" Name="noneItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/NoneItem/@Text}"/>
                    <ComboBoxItem x:Uid="VertexItem" Name="vertexItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/VertexItem/@Text}"/>
                    <ComboBoxItem x:Uid="EdgeItem" Name="edgeItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/EdgeItem/@Text}"/>
                    <ComboBoxItem x:Uid="TriangleItem" Name="triangleItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/TriangleItem/@Text}"/>
                </ComboBox>
                <WindowsFormsHost x:Uid="observedWFHost" Margin="6,69.993,6,0" Name="observedWFHost" Height="26.117" VerticalAlignment="Top"/>
                <Label x:Uid="observedLabel" Height="23.277" Margin="5.555,41,0,0" Name="observedLabel" VerticalAlignment="Top" HorizontalContentAlignment="Center" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/ObservedToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/ObservedLabel/@Text}"/>
                <Button x:Uid="clearObservedButton" Margin="6,102.212,6,0" Name="clearObservedButton" Height="23" VerticalAlignment="Top" Click="ClearObservedButton_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/ClearButtonToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/ClearButton/@Text}"/>
                <WindowsFormsHost x:Uid="radiusWFHost" Height="28" Margin="6,165.539,6,0" Name="radiusWFHost" VerticalAlignment="Top"/>
                <Label x:Uid="radiusLabel" Height="23.277" Margin="6,136.156,6,0" Name="radiusLabel" VerticalAlignment="Top" HorizontalContentAlignment="Center" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/RadiusToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/RadiusLabel/@Text}"/>
            </Grid>
        </GroupBox>
        <Button x:Uid="settingsButton" Height="23" HorizontalAlignment="Right" Margin="0,495,5.555,0" Name="settingsButton" VerticalAlignment="Top" Width="144.651" Click="SettingsButton_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/SettingsButtonToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/SettingsButton/@Text}"/>
        <Button x:Uid="screenshotButton" Height="23" HorizontalAlignment="Right" Margin="0,0,6,41.107" Name="screenshotButton" VerticalAlignment="Bottom" Width="144.873" Click="ScreenshotButton_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/ScreenshotButtonToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/ScreenshotButton/@Text}"/>
        <Button x:Uid="resetViewButton" Height="23" HorizontalAlignment="Right" Margin="0,0,6,12.221" Name="resetViewButton" VerticalAlignment="Bottom" Width="144.664" Click="ResetViewButton_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=TriMMView/ResetViewButtonToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=TriMMView/ResetViewButton/@Text}"/>
    </Grid>
</Window>
