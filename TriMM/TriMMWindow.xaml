<Window x:Class="TriMM.TriMMWindow"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TriMM" Height="577" Width="300" WindowStyle="ThreeDBorderWindow" MinWidth="300" MinHeight="0" MaxHeight="1000" MaxWidth="300" SizeToContent="Height" ResizeMode="CanMinimize" Visibility="Visible" Top="0" Left="0" Closing="Window_Closing">
    <Grid Height="Auto" VerticalAlignment="Top">
        <Menu Height="23" Name="menu" VerticalAlignment="Top" Background="Transparent" Visibility="Visible">
            <MenuItem Header="File" Name="fileMenuItem" TabIndex="0" IsTabStop="False">
                <MenuItem Header="Open" Name="openMenuItem" Click="OpenMenuItem_Click" />
                <MenuItem Focusable="True" Header="Save" Name="saveMenuItem" Visibility="Collapsed" Click="SaveMenuItem_Click" />
                <MenuItem Focusable="True" Header="Close" Name="closeMenuItem" Visibility="Collapsed" Click="CloseFile" />
                <Separator />
                <MenuItem Header="Exit" Name="exitMenuItem" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="View" Name="viewMenuItem" Visibility="Collapsed" Click="ViewMenuItem_Click" />
            <MenuItem Header="Settings" Name="settingsMenuItem" Click="SettingsMenuItem_Click" />
            <MenuItem Header="Help" Name="helpMenuItem">
                <MenuItem Header="Info" Name="infoMenuItem" Click="InfoMenuItem_Click" />
            </MenuItem>
        </Menu>
        <TabControl Margin="0,183,0,-1" Name="manipulationTabControl" Visibility="Collapsed" VerticalContentAlignment="Top" SelectionChanged="ManipulationTabControl_SelectionChanged">
            <TabItem Header="Triangles" Name="triangleTabItem" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" TabIndex="1">
                <Grid VerticalAlignment="Top" Height="262" Visibility="Visible">
                    <WindowsFormsHost Margin="0,0,0,0" Name="aWFHost" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89" TabIndex="2" />
                    <WindowsFormsHost Height="26" Margin="95,0,0,0" Name="bWFHost" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89" TabIndex="3" />
                    <WindowsFormsHost Height="26" HorizontalAlignment="Right" Name="cWFHost" VerticalAlignment="Top" Width="89" TabIndex="4" />
                    <Button Height="23" Margin="6,32,6,0" Name="removeColinButton" VerticalAlignment="Top" TabIndex="5" Click="RemoveColinButton_Click">Remove Triangles with colinear Vertices</Button>
                    <Button Height="23" Margin="6,61,6,0" Name="removeDoubleButton" VerticalAlignment="Top" TabIndex="6" Click="RemoveDoubleButton_Click">Remove Double Triangles</Button>
                    <Button Height="23" Margin="6,90,6,0" Name="flipAllTrianglesButton" VerticalAlignment="Top" TabIndex="7" Click="FlipAllTrianglesButton_Click">Flip All Triangles</Button>
                    <Button Height="23" Margin="6,119,6,0" Name="flipObservedTriangleButton" VerticalAlignment="Top" TabIndex="8" Click="FlipObservedTriangleButton_Click">Flip Observed Triangle</Button>
                    <Button Height="23" Margin="6,177,6,0" Name="subdivideTriangleButton"  VerticalAlignment="Top" TabIndex="9" Click="SubdivideTriangleButton_Click">Subdivide Observed Triangle</Button>
                    <Button Margin="6,148,6,0" Name="subdivideMeshButton" TabIndex="10" Click="SubdivideMeshButton_Click" Height="23" VerticalAlignment="Top">Subdivide All Triangles</Button>
                    <Button Height="23" Margin="6,206,6,0" Name="removeTriangleButton" VerticalAlignment="Top" TabIndex="11" Click="RemoveTriangleButton_Click">Remove selected Triangle</Button>
                    <Button Height="23" Margin="6,235,6,0" Name="addTriangleButton" VerticalAlignment="Top" TabIndex="12" Click="AddTriangleButton_Click">Add selected Triangle</Button>
                </Grid>
            </TabItem>
            <TabItem Header="Vertices" Name="verticesTabItem" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" TabIndex="13">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="326">
                    <WindowsFormsHost Height="26" Margin="78,0,6,0" Name="xWFHost" VerticalAlignment="Top" TabIndex="14" />
                    <WindowsFormsHost Height="26" Margin="78,27,6,0" Name="yWFHost" VerticalAlignment="Top" TabIndex="15" />
                    <WindowsFormsHost Height="26" Name="zWFHost" VerticalAlignment="Top" TabIndex="16" Margin="78,57,6,0" />
                    <Button Height="23" Margin="6,91.277,6,0" Name="removeSinglesButton" VerticalAlignment="Top" TabIndex="17" Click="RemoveSinglesButton_Click">Remove Single Vertices</Button>
                    <Button Height="23" Margin="6,120.277,6,0" Name="removeDoubleVertButton" VerticalAlignment="Top" TabIndex="18" Click="RemoveDoubleVertButton_Click">Remove Double Vertices</Button>
                    <Button Margin="6,149.277,6,153.723" Name="removeObservedButton" Click="RemoveObservedButton_Click">Remove Observed Vertex</Button>
                    <Button Height="23" Margin="6,0,6,124.723" Name="addVertexButton" VerticalAlignment="Bottom" TabIndex="19" Click="AddVertexButton_Click">Add selected Vertex</Button>
                    <Button Height="23" Margin="6,0,6,95.723" Name="moveObservedButton" VerticalAlignment="Bottom" TabIndex="20" Click="MoveObservedButton_Click">Move Observed Vertex To</Button>
                    <Button Height="23" Margin="6,0,6,66" Name="transposeVertexButton" VerticalAlignment="Bottom" TabIndex="21" Click="TransposeVertexButton_Click">Transpose Observed Vertex By</Button>
                    <Button Height="23" Margin="6,0,6,38" Name="moveAlongNormalButton" VerticalAlignment="Bottom" TabIndex="22" Click="MoveAlongNormalButton_Click">Move Observed Vertex along Normal</Button>
                    <WindowsFormsHost Height="26" Margin="78,0,6,6" Name="distanceWFHost" VerticalAlignment="Bottom" TabIndex="23" />
                    <Label Height="26" Margin="6,0,0,6" Name="distanceLabel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="67">Distance:</Label>
                    <Label Height="28" Margin="6,-2,0,0" Name="xLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="48" ClipToBounds="False">X:</Label>
                    <Label Height="28" Margin="6,30,0,0" Name="yLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="38">Y:</Label>
                    <Label Height="28" Margin="6,57,0,0" Name="zLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="25">Z:</Label>
                </Grid>
            </TabItem>
            <TabItem Header="Edges" Name="edgesTabItem" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" TabIndex="24">
                <Grid Visibility="Visible">
                    <WindowsFormsHost Height="26" HorizontalAlignment="Left" Margin="2,0,0,0" Name="e1WFHost" VerticalAlignment="Top" Width="89" TabIndex="25" />
                    <WindowsFormsHost Height="26" Name="e2WFHost" VerticalAlignment="Top" HorizontalAlignment="Right" Width="89" Margin="0,0,2,0" TabIndex="26" />
                    <Button Height="23" Margin="0,32,0,0" Name="flipEdgeButton" VerticalAlignment="Top" TabIndex="27" Click="FlipEdgeButton_Click">Flip Selected Edge</Button>
                    <Button Height="23" Margin="0,61,0,0" Name="subdivideEdgeButton" VerticalAlignment="Top" TabIndex="28" Click="SubdivideEdgeButton_Click">Subdivide Selected Edge</Button>
                    <Button Height="23" Margin="0,90,0,0" Name="removeEdgeButton" VerticalAlignment="Top" TabIndex="29" Click="RemoveEdgeButton_Click">Remove Selected Edge</Button>
                </Grid>
            </TabItem>
        </TabControl>
        <ToolBarTray Height="26" Margin="0,29,0,0" Name="toolBarTray1" VerticalAlignment="Top" Background="Transparent">
            <ToolBar Name="normalAlgoToolBar" IsTabStop="True" ToolTip="Choose the algorithm for calculating the vertex normals." Background="Transparent">
                <Label Height="23" Margin="0,0,0,0" Name="normalAlgorithmLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="101">Normal Algorithm:</Label>
                <ComboBox Height="23" Margin="0,0,0,0" Width="155" Name="normalComboBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="NormalComboBox_SelectionChanged" TabIndex="0" />
            </ToolBar>
        </ToolBarTray>
        <GroupBox Header="Mesh Information" Name="meshGroupBox" Visibility="Collapsed" Margin="0,61,0,0" Height="Auto" VerticalAlignment="Top">
            <Grid>
                <Label Margin="0,6,0,0" Name="verticesLabel" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="63">Vertices:</Label>
                <Label Margin="0,35" Name="trianglesLabel" HorizontalAlignment="Left" Width="63">Triangles:</Label>
                <Label Height="23" Margin="0,0,0,6" Name="edgesLabel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="63">Edges:</Label>
                <TextBox Height="23" Margin="69,9,6,0" Name="verticesTextBox" VerticalAlignment="Top" IsEnabled="True" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False" Background="Transparent" ToolTip="Shows the number of vertices in the TriangleMesh." BorderThickness="0" HorizontalScrollBarVisibility="Disabled" />
                <TextBox IsEnabled="True" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False" Margin="69,38,6,32" Name="trianglesTextBox" ToolTip="Shows the number of Triangles in the TriangleMesh." Background="Transparent" BorderThickness="0" HorizontalScrollBarVisibility="Disabled" />
                <TextBox Height="23" IsEnabled="True" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False" Margin="69,0,6,3" Name="edgesTextBox" VerticalAlignment="Bottom" ToolTip="Shows the number of Edges in the TriangleMesh." Background="Transparent" BorderThickness="0" HorizontalScrollBarVisibility="Disabled" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
