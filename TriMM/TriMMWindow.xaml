    <Window x:Class="TriMM.TriMMWindow"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TriMM" Height="577" Width="300" WindowStyle="ThreeDBorderWindow" MinWidth="300" MinHeight="0" MaxHeight="1000" MaxWidth="300" SizeToContent="Height" ResizeMode="CanMinimize" Visibility="Visible" Top="0" Left="0" Closing="Window_Closing">
    <Grid Height="Auto" VerticalAlignment="Top">
        <Menu Height="23" Name="menu" VerticalAlignment="Top" Visibility="Visible">
            <MenuItem Header="File" Name="fileMenuItem" TabIndex="0" IsTabStop="False">
                <MenuItem Header="Open" Name="openMenuItem" Click="OpenMenuItem_Click" ToolTip="Load a TriangleMesh from a file (.OBJ, .OFF, .PLY, .STL)." />
                <MenuItem Focusable="True" Header="Save" Name="saveMenuItem" Visibility="Collapsed" Click="SaveMenuItem_Click" ToolTip="Save the TriangleMesh to a file (.OBJ, .OFF, .PLY, .STL)." />
                <MenuItem Focusable="True" Header="Close" Name="closeMenuItem" Visibility="Collapsed" Click="CloseFile" ToolTip="Close the current file." />
                <Separator Foreground="Black" />
                <MenuItem Header="Exit" Name="exitMenuItem" Click="ExitMenuItem_Click" ToolTip="Exit TriMM." />
            </MenuItem>
            <MenuItem Header="View" Name="viewMenuItem" Visibility="Collapsed" Click="ViewMenuItem_Click" ToolTip="Show the visualization of the TriangleMesh." />
            <MenuItem Header="Settings" Name="settingsMenuItem" Click="SettingsMenuItem_Click" ToolTip="Change the settings for TriMM." />
            <MenuItem Header="Help" Name="helpMenuItem">
                <MenuItem Header="Info" Name="infoMenuItem" Click="InfoMenuItem_Click" ToolTip="Copyright, Version and License information." />
            </MenuItem>
        </Menu>
        <TabControl Margin="0,183,0,-1" Name="manipulationTabControl" Visibility="Collapsed" VerticalContentAlignment="Top" SelectionChanged="ManipulationTabControl_SelectionChanged">
            <TabItem Header="Triangles" Name="triangleTabItem" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" TabIndex="1" ToolTip="Triangle Manipulation">
                <Grid VerticalAlignment="Top" Height="262" Visibility="Visible">
                    <WindowsFormsHost Margin="0,0,0,0" Name="aWFHost" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89" TabIndex="2" />
                    <WindowsFormsHost Height="26" Margin="95,0,0,0" Name="bWFHost" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89" TabIndex="3" />
                    <WindowsFormsHost Height="26" HorizontalAlignment="Right" Name="cWFHost" VerticalAlignment="Top" Width="89" TabIndex="4" />
                    <Button Height="23" Margin="6,32,6,0" Name="removeColinButton" VerticalAlignment="Top" TabIndex="5" Click="RemoveColinButton_Click" ToolTip="Removes all Triangles that have three colinear Vertices.">Remove Triangles with colinear Vertices</Button>
                    <Button Height="23" Margin="6,61,6,0" Name="removeDoubleButton" VerticalAlignment="Top" TabIndex="6" Click="RemoveDoubleButton_Click" ToolTip="Removes all duplicates of Triangles.">Remove Double Triangles</Button>
                    <Button Height="23" Margin="6,90,6,0" Name="flipAllTrianglesButton" VerticalAlignment="Top" TabIndex="7" Click="FlipAllTrianglesButton_Click" ToolTip="Changes the orientation and thus the direction of the normal vector for all Triangles.">Flip All Triangles</Button>
                    <Button Height="23" Margin="6,119,6,0" Name="flipObservedTriangleButton" VerticalAlignment="Top" TabIndex="8" Click="FlipObservedTriangleButton_Click" ToolTip="Changes the orientation and thus the direction of the normal vector for the Triangle picked in the visualization.">Flip Observed Triangle</Button>
                    <Button Height="23" Margin="6,177,6,0" Name="subdivideTriangleButton"  VerticalAlignment="Top" TabIndex="9" Click="SubdivideTriangleButton_Click" ToolTip="Subdivides the Triangle picked in the visualization by connecting the midege Vertices. 4 new Triangle for every Triangle.">Subdivide Observed Triangle</Button>
                    <Button Margin="6,148,6,0" Name="subdivideMeshButton" TabIndex="10" Click="SubdivideMeshButton_Click" Height="23" VerticalAlignment="Top" ToolTip="Subdivides all Triangles by connecting the midege Vertices. 4 new Triangle for every Triangle.">Subdivide All Triangles</Button>
                    <Button Height="23" Margin="6,206,6,0" Name="removeTriangleButton" VerticalAlignment="Top" TabIndex="11" Click="RemoveTriangleButton_Click" ToolTip="Removes the Triangle determined by the Vertex-indices selected above.">Remove selected Triangle</Button>
                    <Button Height="23" Margin="6,235,6,0" Name="addTriangleButton" VerticalAlignment="Top" TabIndex="12" Click="AddTriangleButton_Click" ToolTip="Adds the Triangle determined by the Vertex-indices selected above.">Add selected Triangle</Button>
                </Grid>
            </TabItem>
            <TabItem Header="Vertices" Name="verticesTabItem" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" TabIndex="13" ToolTip="Vertex Manipulation.">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="326">
                    <WindowsFormsHost Height="26" Margin="78,0,6,0" Name="xWFHost" VerticalAlignment="Top" TabIndex="14" />
                    <WindowsFormsHost Height="26" Margin="78,27,6,0" Name="yWFHost" VerticalAlignment="Top" TabIndex="15" />
                    <WindowsFormsHost Height="26" Name="zWFHost" VerticalAlignment="Top" TabIndex="16" Margin="78,57,6,0" />
                    <Button Height="23" Margin="6,91.277,6,0" Name="removeSinglesButton" VerticalAlignment="Top" TabIndex="17" Click="RemoveSinglesButton_Click" ToolTip="Removes all Vertices that do not belong to any Triangle.">Remove Single Vertices</Button>
                    <Button Height="23" Margin="6,120.277,6,0" Name="removeDoubleVertButton" VerticalAlignment="Top" TabIndex="18" Click="RemoveDoubleVertButton_Click" ToolTip="Removes duplicates of Vertices and adjusts the Triangles.">Remove Double Vertices</Button>
                    <Button Margin="6,149.277,6,0" Name="removeObservedButton" Click="RemoveObservedButton_Click" ToolTip="Removes the Vertex picked in the visualization." Height="23" VerticalAlignment="Top">Remove Observed Vertex</Button>
                    <Button Height="23" Margin="6,178.277,6,0" Name="addVertexButton" VerticalAlignment="Top" TabIndex="19" Click="AddVertexButton_Click" ToolTip="Adds the Vertex determined by the coordinates chosen above.">Add selected Vertex</Button>
                    <Button Height="23" Margin="6,207.277,6,0" Name="moveObservedButton" VerticalAlignment="Top" TabIndex="20" Click="MoveObservedButton_Click" ToolTip="Moves the Vertex picked in the visualization to the coordinates chosen above.">Move Observed Vertex To</Button>
                    <Button Height="23" Margin="6,237,6,0" Name="transposeVertexButton" VerticalAlignment="Top" TabIndex="21" Click="TransposeVertexButton_Click" ToolTip="Moves the Vertex picked in the visualization by adding the coordinates chosen above to it's position.">Transpose Observed Vertex By</Button>
                    <Button Height="23" Margin="6,265,6,0" Name="moveAlongNormalButton" VerticalAlignment="Top" TabIndex="22" Click="MoveAlongNormalButton_Click" ToolTip="Moves the Vertex picked in the visualization by the value selected below along its normal vector.">Move Observed Vertex along Normal</Button>
                    <WindowsFormsHost Height="26" Margin="78,294,6,0" Name="distanceWFHost" VerticalAlignment="Top" TabIndex="23" />
                    <Label Height="26" Margin="6,294,0,0" Name="distanceLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="67" ToolTip="The distance to move the Vertex.">Distance:</Label>
                    <Label Height="28" Margin="6,-2,0,0" Name="xLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="48" ClipToBounds="False" ToolTip="The x-coordinate.">X:</Label>
                    <Label Height="28" Margin="6,30,0,0" Name="yLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="38" ToolTip="The y-coordinate.">Y:</Label>
                    <Label Height="28" Margin="6,57,0,0" Name="zLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="25" ToolTip="The z-coordinate.">Z:</Label>
                </Grid>
            </TabItem>
            <TabItem Header="Edges" Name="edgesTabItem" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" TabIndex="24" ToolTip="Edge manipulations.">
                <Grid Visibility="Visible">
                    <WindowsFormsHost Height="26" HorizontalAlignment="Left" Margin="2,0,0,0" Name="e1WFHost" VerticalAlignment="Top" Width="89" TabIndex="25" />
                    <WindowsFormsHost Height="26" Name="e2WFHost" VerticalAlignment="Top" HorizontalAlignment="Right" Width="89" Margin="0,0,2,0" TabIndex="26" />
                    <Button Height="23" Margin="0,32,0,0" Name="flipEdgeButton" VerticalAlignment="Top" TabIndex="27" Click="FlipEdgeButton_Click" ToolTip="Flips the selected Edge connecting the opposite corners of the incident Triangles instead.">Flip Selected Edge</Button>
                    <Button Height="23" Margin="0,61,0,0" Name="subdivideEdgeButton" VerticalAlignment="Top" TabIndex="28" Click="SubdivideEdgeButton_Click" ToolTip="Subdivides the Edge picked in the visualization by connecting the midege Vertex to the opposite corners of the incident Triangles.">Subdivide Selected Edge</Button>
                    <Button Height="23" Margin="0,90,0,0" Name="removeEdgeButton" VerticalAlignment="Top" TabIndex="29" Click="RemoveEdgeButton_Click" ToolTip="Removes the Edge picked in the visualization.">Remove Selected Edge</Button>
                </Grid>
            </TabItem>
        </TabControl>
        <ToolBarTray Height="Auto" Margin="0,23,0,0" Name="toolBarTray1" VerticalAlignment="Top">
            <ToolBar Name="normalAlgoToolBar" IsTabStop="True" ToolTip="Choose the algorithm for calculating the vertex normals.">
                <Label Height="Auto" Margin="0,0,0,0" Name="normalAlgorithmLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto">Normal Algorithm:</Label>
                <ComboBox Height="23" Margin="0,0,0,0" Width="155" Name="normalComboBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="NormalComboBox_SelectionChanged" TabIndex="0" />
            </ToolBar>
        </ToolBarTray>
        <GroupBox Header="Mesh Information" Name="meshGroupBox" Visibility="Collapsed" Margin="0,61,0,0" Height="Auto" VerticalAlignment="Top">
            <Grid>
                <Label Margin="0,6,0,0" Name="verticesLabel" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="63">Vertices:</Label>
                <Label Margin="0,35" Name="trianglesLabel" HorizontalAlignment="Left" Width="63">Triangles:</Label>
                <Label Height="23" Margin="0,0,0,6" Name="edgesLabel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="63">Edges:</Label>
                <TextBox Height="23" Margin="69,9,6,0" Name="verticesTextBox" VerticalAlignment="Top" IsEnabled="True" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False" Background="Transparent" ToolTip="Shows the number of Vertices in the TriangleMesh." BorderThickness="0" HorizontalScrollBarVisibility="Disabled" />
                <TextBox IsEnabled="True" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False" Margin="69,38,6,32" Name="trianglesTextBox" ToolTip="Shows the number of Triangles in the TriangleMesh." Background="Transparent" BorderThickness="0" HorizontalScrollBarVisibility="Disabled" />
                <TextBox Height="23" IsEnabled="True" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False" Margin="69,0,6,3" Name="edgesTextBox" VerticalAlignment="Bottom" ToolTip="Shows the number of Edges in the TriangleMesh." Background="Transparent" BorderThickness="0" HorizontalScrollBarVisibility="Disabled" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
