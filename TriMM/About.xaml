    <Window x:Class="TriMM.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Source={StaticResource Lang}, XPath=About/Title/@Text}" Width="Auto" ResizeMode="NoResize" ShowInTaskbar="False" ShowActivated="False" WindowStartupLocation="CenterScreen" Background="GhostWhite" SizeToContent="WidthAndHeight">
    <StackPanel Name="stackPanel1">
        <Label Height="Auto" Name="programmLabel" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15" Content="{Binding Source={StaticResource Lang}, XPath=About/ProgramLabel/@Text}" />
        <Rectangle Height="6" Name="rectangle3" StrokeThickness="0" Visibility="Hidden" />
        <Label Height="Auto" Name="versionLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12">Label</Label>
        <Rectangle Height="6" Name="rectangle1" StrokeThickness="0" Visibility="Hidden" />
        <Label Height="Auto" Name="authorLabel" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Label</Label>
        <Rectangle Height="6" Name="rectangle2" StrokeThickness="0" Visibility="Hidden" />
        <DockPanel Name="dockPanel1" Background="White" Height="200">
            <FlowDocumentScrollViewer BorderBrush="Black" BorderThickness="1" Name="licenseViewer" Background="White" Foreground="Black" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" DockPanel.Dock="Top" HorizontalScrollBarVisibility="Auto"></FlowDocumentScrollViewer>
        </DockPanel>
    </StackPanel>
</Window>
