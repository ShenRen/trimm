    <Window x:Uid="About" x:Class="TriMM.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Source={StaticResource Lang}, XPath=About/Title/@Text}" Height="358" Width="430" ResizeMode="NoResize" ShowInTaskbar="False" ShowActivated="False" WindowStartupLocation="CenterScreen" Background="GhostWhite" Uid="About">
    <Grid x:Uid="Grid_1">
        <Label x:Uid="programmLabel" Height="28" Name="programmLabel" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="15" Content="{Binding Source={StaticResource Lang}, XPath=About/ProgramLabel/@Text}"/>
        <Label x:Uid="versionLabel" Height="28" Margin="0,34,0,0" Name="versionLabel" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12">Label</Label>
        <Label x:Uid="authorLabel" Height="28" Margin="0,68,0,0" Name="authorLabel" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Label</Label>
        <DockPanel x:Uid="dockPanel1" Name="dockPanel1" Background="White" Margin="0,102,0,0">
            <FlowDocumentScrollViewer x:Uid="licenseViewer" BorderBrush="Black" BorderThickness="1" Name="licenseViewer" Background="White" Foreground="Black"></FlowDocumentScrollViewer>
        </DockPanel>
    </Grid>
</Window>
