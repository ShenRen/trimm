    <Window x:Uid="SettingsWindow" x:Class="TriMM.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/Title/@Text}" Height="250" Width="501" WindowStartupLocation="CenterScreen" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize" SizeToContent="Width" Uid="SettingsWindow">
    <Grid x:Uid="Grid_1">
        <Menu x:Uid="menu1" Height="22" Name="menu1" VerticalAlignment="Top">
            <MenuItem x:Uid="loadSettingsMenuItem" Header="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/LoadSettingsMenuItem/@Text}" Name="loadSettingsMenuItem" Click="LoadSettingsMenuItem_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/LoadSettingsToolTip/@Text}" />
            <MenuItem x:Uid="saveSettingsMenuItem" Header="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/SaveSettingsMenuItem/@Text}" Name="saveSettingsMenuItem" Click="SaveSettingsMenuItem_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/SaveSettingsToolTip/@Text}" />
            <MenuItem x:Uid="resetAllMenuItem" Header="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ResetAllMenuItem/@Text}" Name="resetAllMenuItem" Click="ResetAllMenuItem_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ResetAllToolTip/@Text}" />
            <MenuItem x:Uid="makeStandardMenuItem" Header="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/MakeStandardMenuItem/@Text}" Name="makeStandardMenuItem" Click="MakeStandardMenuItem_Click" ToolTip="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/MakeStandardToolTip/@Text}" />
        </Menu>
        <ToolBarTray x:Uid="toolBarTray1" Height="Auto" Margin="0,22,0,0" Name="toolBarTray1" VerticalAlignment="Top">
            <ToolBar Height="Auto" HorizontalAlignment="Left" Margin="0,0,0,0" Name="toolBar1" VerticalAlignment="Stretch" Width="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <Label x:Uid="languageLabel" Height="Auto" Margin="0,0,0,0" Name="languageLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/LanguageLabel/@Text}"/>
                <ComboBox x:Uid="languageComboBox" Height="23" Margin="0,0,0,0" Width="160" Name="languageComboBox" VerticalAlignment="Top" HorizontalAlignment="Stretch"  TabIndex="0" ToolTip="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/LanguageToolTip/@Text}" SelectionChanged="LanguageComboBox_SelectionChanged" />
            </ToolBar>
            <ToolBar x:Uid="normalAlgoToolBar" Name="normalAlgoToolBar" IsTabStop="True" ToolTip="Choose the algorithm for calculating the vertex normals." HorizontalAlignment="Stretch" VerticalContentAlignment="Center">
                <Label x:Uid="normalAlgorithmLabel" Height="Auto" Margin="0,0,0,0" Name="normalAlgorithmLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="Auto" Content="{Binding Source={StaticResource Lang}, XPath=Global/NormalAlgorithmLabel/@Text}"/>
                <ComboBox x:Uid="normalComboBox" Height="23" Margin="0,0,0,0" Width="160" Name="normalComboBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="NormalComboBox_SelectionChanged" TabIndex="0" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/NormalAlgorithmToolTip/@Text}" />
            </ToolBar>
        </ToolBarTray>
        <GroupBox x:Uid="colorGroupBox" Header="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ColorsGroupBoxHeader/@Text}" Margin="0,54,0,0" Name="colorsGroupBox" Height="53" VerticalAlignment="Top">
            <Grid x:Uid="Grid_2">
                <TextBox x:Uid="colorTextBox" Margin="147,6,76,0" Name="colorTextBox" Height="22.723" VerticalAlignment="Top" IsEnabled="True" IsReadOnly="True" ToolTip="The floating point RGB values of the color." TextAlignment="Right" />
                <Button x:Uid="colorButton" Height="23" HorizontalAlignment="Right" Margin="0,6,47,0" Name="colorButton" VerticalAlignment="Top" Width="23" Click="ColorButton_Click" ToolTip="Pick a different color."></Button>
                <ComboBox x:Uid="colorComboBox" Height="Auto" Margin="6,6,0,0" Name="colorComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="135" SelectedIndex="0" SelectionChanged="ColorComboBox_SelectionChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ColorComboBoxToolTip/@Text}">
                    <ComboBoxItem x:Uid="ComboBoxItem_1" Name="backgroundItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/BackgroundItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_2" Name="textItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/TextItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_3" Name="solidItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/SolidItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_4" Name="meshItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/MeshItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_5" Name="verticesItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/VerticesItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_6" Name="triangleNormalsItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/TriangleNormalsItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_7" Name="vertexNormalsItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/VertexNormalsItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_8" Name="xAxisItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/XAxisItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_9" Name="yAxisItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/YAxisItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_10" Name="zAxisItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ZAxisItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_11" Name="observedVertexItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ObservedVertexItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_12" Name="observedEdgeItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ObservedEdgeItem/@Text}"/>
                    <ComboBoxItem x:Uid="ComboBoxItem_13" Name="observedTriangleItem" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ObservedTriangleItem/@Text}"/>
                </ComboBox>
                <Button Height="23" HorizontalAlignment="Right" Margin="0,6,6,0" Name="resetColorsButton" VerticalAlignment="Top" Width="Auto" Click="ResetColorsButton_Click" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ResetButton/@Text}"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Uid="displayGroupBox" Header="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/DisplayGroupBoxHeader/@Text}" Name="displayGroupBox" Margin="0,113,0,0" Height="99" VerticalAlignment="Top">
            <Grid x:Uid="Grid_3">
                <CheckBox x:Uid="smoothCheckBox" Height="Auto" HorizontalAlignment="Left" Margin="6,6,0,0" Name="smoothCheckBox" VerticalAlignment="Top" Width="Auto" Checked="SmoothCheckBox_Checked" Unchecked="SmoothCheckBox_Checked" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/SmoothCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/SmoothCheckBox/@Text}"/>
                <CheckBox x:Uid="solidCheckBox" Height="Auto" Margin="138,6,0,0" Name="solidCheckBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Checked="SolidCheckBox_Checked" Unchecked="SolidCheckBox_Checked" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/SolidCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/SolidCheckBox/@Text}"/>
                <CheckBox x:Uid="meshCheckBox" Height="Auto" Margin="0,6,138,0" Name="meshCheckBox" VerticalAlignment="Top" Checked="MeshCheckBox_Checked" Unchecked="MeshCheckBox_Checked" HorizontalAlignment="Right" Width="50" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/MeshCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/MeshCheckBox/@Text}"/>
                <CheckBox x:Uid="verticesCheckBox" HorizontalAlignment="Right" Margin="0,6,11.21,0" Name="verticesCheckBox" Width="58.79" Height="15.96" VerticalAlignment="Top" Checked="VerticesCheckBox_Checked" Unchecked="VerticesCheckBox_Checked" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/VerticesCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/VerticesCheckBox/@Text}"/>
                <CheckBox x:Uid="triangleNormalsCheckBox" Margin="6,28,0,0" Name="triangleNormalsCheckBox" Height="Auto" VerticalAlignment="Top" Checked="TriangleNormalsCheckBox_Checked" Unchecked="TriangleNormalsCheckBox_Checked" HorizontalAlignment="Left" Width="Auto" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/TriangleNormalsCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/TriangleNormalsCheckBox/@Text}"/>
                <CheckBox x:Uid="vertexNormalsCheckBox" Margin="138,28,0,0" Name="vertexNormalsCheckBox" Height="15.96" VerticalAlignment="Top" Checked="VertexNormalsCheckBox_Checked" Unchecked="VertexNormalsCheckBox_Checked" HorizontalAlignment="Left" Width="103" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/VertexNormalsCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/VertexNormalsCheckBox/@Text}"/>
                <CheckBox x:Uid="xAxisCheckBox" Height="Auto" Margin="0,28,145,0" Name="xAxisCheckBox" VerticalAlignment="Top" Checked="XAxisCheckBox_Checked" Unchecked="XAxisCheckBox_Checked" HorizontalAlignment="Right" Width="Auto" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/XAxisCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/XAxisCheckBox/@Text}"/>
                <CheckBox x:Uid="yAxisCheckBox" HorizontalAlignment="Right" Margin="0,28,77,0" Name="yAxisCheckBox" Width="Auto" Checked="YAxisCheckBox_Checked" Unchecked="YAxisCheckBox_Checked" Height="Auto" VerticalAlignment="Top" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/YAxisCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/YAxisCheckBox/@Text}"/>
                <CheckBox x:Uid="zAxisCheckBox" Height="15.96" HorizontalAlignment="Right" Margin="0,28,7,0" Name="zAxisCheckBox" VerticalAlignment="Top" Width="49.89" Checked="ZAxisCheckBox_Checked" Unchecked="ZAxisCheckBox_Checked" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/XAxisCheckBoxToolTip/@Text}" Content="{Binding Source={StaticResource Lang}, XPath=Global/ZAxisCheckBox/@Text}"/>
                <Label x:Uid="pickingModeLabel" Margin="6,0,0,6.447" Name="pickingModeLabel" HorizontalAlignment="Left" Width="103" Height="23.277" VerticalAlignment="Bottom" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/PickingModeLabel/@Text}"/>
                <ComboBox x:Uid="pickingModeComboBox" Margin="115,50,195,0" Name="pickingModeComboBox" SelectedIndex="0" SelectionChanged="PickingModeComboBox_SelectionChanged" ToolTip="{Binding Source={StaticResource Lang}, XPath=Global/PickingModeComboBoxToolTip/@Text}" Height="21.96" VerticalAlignment="Top">
                    <ComboBoxItem x:Uid="NoneItem" Name="noneItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/NoneItem/@Text}"/>
                    <ComboBoxItem x:Uid="VertexItem" Name="vertexItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/VertexItem/@Text}"/>
                    <ComboBoxItem x:Uid="EdgeItem" Name="edgeItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/EdgeItem/@Text}"/>
                    <ComboBoxItem x:Uid="TriangleItem" Name="triangleItem" Content="{Binding Source={StaticResource Lang}, XPath=Global/TriangleItem/@Text}"/>
                </ComboBox>
                <Button Height="23" HorizontalAlignment="Right" Margin="0,0,7,7" Name="resetDisplayButton" VerticalAlignment="Bottom" Width="Auto" Click="ResetDisplayButton_Click" Content="{Binding Source={StaticResource Lang}, XPath=SettingsWindow/ResetButton/@Text}"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
